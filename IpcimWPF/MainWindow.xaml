<Window x:Class="IpcimWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IpcimWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid Margin="30" x:Name="dataGrid"></DataGrid>
        <StackPanel Orientation="Vertical" Margin="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Domain-name:"></Label>
            <TextBox x:Name="domainName" Margin="5" Width="140"></TextBox>
            <Label Content="IP cím:"></Label>
            <TextBox x:Name="ipAddress" Margin="5" Width="140"></TextBox>
            <Button Content="Bevitel" Margin="5" Width="50" HorizontalAlignment="Left" Click="addButton"></Button>
            <Button Content="Mentés" Margin="5" Width="50" HorizontalAlignment="Left" Click="addButton"></Button>
        </StackPanel>
    </Grid>
</Window>
